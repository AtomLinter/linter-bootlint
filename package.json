{
  "name": "linter-bootlint",
  "main": "./lib/init.js",
  "version": "1.1.0",
  "keywords": [
    "html",
    "lint",
    "linter",
    "bootlint"
  ],
  "description": "Lint Bootstrap HTML on the fly, using bootlint.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtomLinter/linter-bootlint.git"
  },
  "bugs": {
    "url": "https://github.com/AtomLinter/linter-bootlint/issues"
  },
  "homepage": "https://github.com/AtomLinter/linter-bootlint#readme",
  "license": "MIT",
  "configSchema": {
    "executablePath": {
      "description": "Allows overriding the path of the `bootlint` executable.",
      "type": "string",
      "default": ""
    },
    "flags": {
      "description": "Disable certain lint checks (comma-separated), refer to the `bootlint` GitHub page for error codes.",
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    }
  },
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.0.0",
    "bootlint": "0.14.2"
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "jasmine-fix": "1.3.1"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "renovate": {
    "extends": [
      "config:base"
    ]
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  }
}
